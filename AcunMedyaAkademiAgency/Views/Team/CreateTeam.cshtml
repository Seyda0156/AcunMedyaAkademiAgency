@model AcunMedyaAkademiAgency.Entities.Team
@{
    ViewBag.Title = "CreateTeam";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personel Güncelleme Sayfası</h4>
            <p class="card-description">Personel güncelleme işlemlerini buradan yapınız.</p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Personel Adı</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Personel Adı" name="NameSurname" />
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Resim Yolu</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Resim Yolu" name="ImageUrl" />
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Cinsiyet</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Cinsiyet" name="Gender" />
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Şehir</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Şehir" name="City" />
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Branş</label>
                     @Html.DropDownListFor(x => x.BranchId, (List<SelectListItem>)ViewBag.v, new { @class = "table table-bordered" })
                </div>
                <button type="submit" class="btn btn-primary mr-2"> Güncelle </button>
                <button class="btn btn-light">Vazgeç</button>
            </form>
        </div>
    </div>
</div>