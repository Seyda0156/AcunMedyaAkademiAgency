@model AcunMedyaAkademiAgency.Entities.Team
@{
    ViewBag.Title = "UpdateTeam";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ekip Güncelleme Sayfası</h4>
            <p class="card-description">Ekip güncelleme işlemlerini buradan yapınız.</p>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.TeamId) <!-- TeamID gizli alan olarak gönderiliyor -->
                <div class="form-group">
                    <label for="exampleInputName1">Ad Soyad</label>
                    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputCity1">Resim Yolu</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Cinsiyet</label>
                    @Html.TextBoxFor(x => x.Gender, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Şehir</label>
                    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Branş</label>
                    @Html.DropDownListFor(x => x.BranchId, (List<SelectListItem>)ViewBag.v, "Branş Seçiniz", new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <button type="button" class="btn btn-light" onclick="window.location.href='@Url.Action("TeamList")'">Vazgeç</button>
            </form>
        </div>
    </div>
</div>