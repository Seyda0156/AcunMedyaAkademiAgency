@model AcunMedyaAkademiAgency.Entities.Feature
@{
    ViewBag.Title = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-3">
    <h2 class="mb-3">Öne Çıkanlar</h2>

    <form method="post" class="w-50">
        <div class="form-group mb-2">
            <label class="form-label">Başlık</label>
            <input type="text" class="form-control" name="Title" />
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Açıklaması</label>
            <textarea rows="3" class="form-control" name="Description"></textarea>
        </div>
        <button type="submit" class="btn btn-danger w-100">Öne Çıkanları Kaydet</button>
    </form>
</div>