@model List<AcunMedyaAkademiAgency.Entities.Notification>
@{
    ViewBag.Title = "NotificationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bildirim Sayfası</h4>
            <p class="card-description">
                Bildirim işlemlerini burdan yapınız.
            </p>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Açıklama</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.NameSurname</td>
                                <td>@item.Description</td>
                                <td><a class="btn btn-danger" href="/Notification/DeleteNotification/@item.NotificationId"><i class="fa fa-trash">Sil</i></a></td>
                                <td><a class="btn btn-success" href="/Notification/UpdateNotification/@item.NotificationId"><i class="fa fa-pencil">Güncelle</i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Notification/CreateNotification" class="btn btn-info"><i class="mdi mdi-file-check btn-icon-append">Yeni Bildirim Giriniz</i></a>
            </div>
        </div>
    </div>
</div>
